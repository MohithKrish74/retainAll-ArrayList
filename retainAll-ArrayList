package com.company;

import com.sun.jdi.Value;

import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        ArrayList<Integer> list1=new ArrayList<Integer>();
        System.out.print("Enter the size of the list1: ");
        Scanner in =new Scanner(System.in);
        int size=in.nextInt();
        System.out.println("Enter the elements: ");
        for(int i=0;i<size;i++)
        {
            list1.add(in.nextInt());
        }
        ArrayList<Integer>list2=new ArrayList<Integer>();
        System.out.print("Enter the size of the list2: ");
        int sizes =in.nextInt();
        System.out.println("Enter the elements: ");
        for(int i=0;i<sizes;i++)
        {
            list2.add(in.nextInt());
        }
        System.out.println("User List1 is "+list1);
        System.out.println("User List2 is "+list2);
        list1.retainAll(list2);
        System.out.println("Intersection of list1 with list2 is "+list1);
        list2.retainAll(list1);
        System.out.println("Intersection of list2 with list1 is "+list2);





    }




}







